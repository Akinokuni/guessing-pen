# PostgREST API 配置
VITE_POSTGREST_URL=http://localhost:3001
VITE_USE_POSTGREST=false

# PostgreSQL 数据库配置（阿里云RDS）
DB_HOST=your-database-host.pg.rds.aliyuncs.com
DB_PORT=5432
DB_USER=your-username
DB_PASSWORD=your-password
DB_NAME=your-database
DB_SSL=false

# 本地开发数据库配置（可选）
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=your-local-password
LOCAL_DB_NAME=guessing_pen_db

# 应用配置
VITE_APP_TITLE=旮旯画师之猜猜笔
VITE_APP_VERSION=1.0.0

# 数据库服务选择
VITE_USE_DIRECT_DB=true
VITE_USE_SUPABASE=false

# Supabase 配置（如果使用Supabase）
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
