# 开发环境配置模板
# 复制为 .env.development 并填写实际值

# =============================================================================
# 开发环境基础配置
# =============================================================================
NODE_ENV=development
API_PORT=3005
FRONTEND_PORT=3000

# =============================================================================
# 开发数据库配置
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_NAME=guessing_pen_dev
DB_SSL=false

# =============================================================================
# 开发环境ACR配置
# =============================================================================
ACR_REGISTRY=registry.cn-hangzhou.aliyuncs.com
ACR_NAMESPACE=guessing-pen-dev
ACR_USERNAME=dev_acr_user
ACR_PASSWORD=dev_acr_password

# =============================================================================
# 开发服务器配置
# =============================================================================
SERVER_HOST=dev.example.com
SERVER_USER=dev
SERVER_PORT=22

# =============================================================================
# 开发环境API配置
# =============================================================================
API_BASE_URL=http://localhost:3005
VITE_API_URL=http://localhost:3005
VITE_APP_TITLE=旮旯画师 (开发版)

# =============================================================================
# 开发环境安全配置（使用较弱的密钥用于开发）
# =============================================================================
JWT_SECRET=dev_jwt_secret_key_not_for_production
SESSION_SECRET=dev_session_secret_not_for_production

# =============================================================================
# 开发环境日志配置
# =============================================================================
LOG_LEVEL=debug
LOG_FILE=logs/dev.log

# =============================================================================
# 开发工具配置
# =============================================================================
DEBUG=true
HOT_RELOAD=true
SOURCE_MAP=true

# =============================================================================
# 开发环境Docker配置
# =============================================================================
DOCKER_IMAGE_TAG=dev
DOCKER_NETWORK=guessing-pen-dev-network