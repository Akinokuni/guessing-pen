# 环境配置模板文件
# 复制此文件为 .env.local, .env.development, .env.production 等
# 根据实际环境填写对应的值

# =============================================================================
# 应用基础配置
# =============================================================================
NODE_ENV=development
API_PORT=3005
FRONTEND_PORT=3000

# =============================================================================
# 数据库配置
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_SSL=false

# =============================================================================
# 阿里云ACR配置
# =============================================================================
ACR_REGISTRY=registry.cn-hangzhou.aliyuncs.com
ACR_NAMESPACE=your_namespace
ACR_USERNAME=your_acr_username
ACR_PASSWORD=your_acr_password

# =============================================================================
# 服务器部署配置
# =============================================================================
SERVER_HOST=your_server_ip
SERVER_USER=your_server_user
SERVER_PORT=22

# =============================================================================
# 应用特定配置
# =============================================================================
# API基础URL
API_BASE_URL=http://localhost:3005

# 前端构建配置
VITE_API_URL=http://localhost:3005
VITE_APP_TITLE=旮旯画师

# =============================================================================
# 安全配置
# =============================================================================
# JWT密钥（生产环境必须更改）
JWT_SECRET=your_jwt_secret_key

# 会话密钥
SESSION_SECRET=your_session_secret

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# =============================================================================
# 监控和通知配置
# =============================================================================
# Slack通知（可选）
SLACK_WEBHOOK_URL=

# 邮件通知（可选）
EMAIL_NOTIFICATION=

# =============================================================================
# Docker配置
# =============================================================================
# Docker镜像标签
DOCKER_IMAGE_TAG=latest

# Docker网络
DOCKER_NETWORK=guessing-pen-network

# =============================================================================
# 开发工具配置
# =============================================================================
# 是否启用调试模式
DEBUG=false

# 是否启用热重载
HOT_RELOAD=true

# 是否启用源码映射
SOURCE_MAP=true