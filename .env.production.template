# 生产环境配置模板
# 复制为 .env.production 并填写实际值
# 注意：生产环境必须使用强密码和安全配置

# =============================================================================
# 生产环境基础配置
# =============================================================================
NODE_ENV=production
API_PORT=3005
FRONTEND_PORT=80

# =============================================================================
# 生产数据库配置
# =============================================================================
DB_HOST=your_production_db_host
DB_PORT=5432
DB_USER=prod_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=guessing_pen_prod
DB_SSL=true

# =============================================================================
# 生产环境ACR配置
# =============================================================================
ACR_REGISTRY=registry.cn-hangzhou.aliyuncs.com
ACR_NAMESPACE=guessing-pen-prod
ACR_USERNAME=prod_acr_user
ACR_PASSWORD=CHANGE_THIS_ACR_PASSWORD

# =============================================================================
# 生产服务器配置
# =============================================================================
SERVER_HOST=your_production_server_ip
SERVER_USER=deploy
SERVER_PORT=22

# =============================================================================
# 生产环境API配置
# =============================================================================
API_BASE_URL=https://api.your-domain.com
VITE_API_URL=https://api.your-domain.com
VITE_APP_TITLE=旮旯画师

# =============================================================================
# 生产环境安全配置（必须使用强密钥）
# =============================================================================
JWT_SECRET=CHANGE_THIS_TO_STRONG_JWT_SECRET_KEY_FOR_PRODUCTION
SESSION_SECRET=CHANGE_THIS_TO_STRONG_SESSION_SECRET_FOR_PRODUCTION

# =============================================================================
# 生产环境日志配置
# =============================================================================
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# =============================================================================
# 生产环境监控配置
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_NOTIFICATION=admin@your-domain.com

# =============================================================================
# 生产工具配置
# =============================================================================
DEBUG=false
HOT_RELOAD=false
SOURCE_MAP=false

# =============================================================================
# 生产环境Docker配置
# =============================================================================
DOCKER_IMAGE_TAG=latest
DOCKER_NETWORK=guessing-pen-prod-network

# =============================================================================
# 生产环境额外安全配置
# =============================================================================
# HTTPS配置
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# 安全头配置
SECURITY_HEADERS_ENABLED=true
CORS_ORIGIN=https://your-domain.com

# 速率限制
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000